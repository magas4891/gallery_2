!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Gallery2
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    -#- if flash[:notice]
    -#  .alert.alert-success= flash[:notice]
    -#- if flash[:alert]
    -#  .alert.alert-danger= flash[:alert]
    = yield
    - if user_signed_in?
      %p
        %li= button_to "Logout", destroy_user_session_path, :method => :delete
      %p
        %li= button_to "Cancel my account", registration_path(current_user), data: { confirm: "Are you sure?" }, method: :delete
    - else
      %p
        %li= button_to "Sign in!", new_user_session_path
      %p
        %li= button_to "Sign up now!",  new_user_registration_path
      %p
        %li= button_to "Sign in with Facebook", user_facebook_omniauth_authorize_path

