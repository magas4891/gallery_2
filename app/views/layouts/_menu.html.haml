.menu_white1
  .navsticky
    %nav.navbar.navbar-topaz{:role => "navigation"}
      .container
        .navbar-header
          %button.navbar-toggle{"data-target" => "#bs-example-navbar-collapse-1",
          "data-toggle" => "collapse", :type => "button"}
          %a.navbar-brand{:href => root_path}
            = image_tag "logo.png", title: "We are FACEit", :class => "swing"
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          %ul.nav.navbar-nav.navbar-right
            %li
              %a{:href => categories_top_path }= t('top_categories')
            %li
              %a{:href => images_path }= t('images')
            %li
              %a{:href => comments_index_path }= t('comments')
            %li.dropdown
              %a.dropdown-toggle{ "data-toggle" => "dropdown", :href => "#portfolio" }
                = t('user_menu')
              %ul.dropdown-menu
                - if user_signed_in?
                  %li
                    %a.linkz_transition-item{:href => destroy_user_session_path,
                     "data-method" => "delete"} #{t('devise.shared.links.sign_out')}
                  %li
                    %a.linkz_transition-item{:href => edit_user_registration_path} #{t('devise.shared.links.edit')}
                - else
                  %li
                    %a.linkz_transition{:href => new_user_session_path } #{t('devise.shared.links.sign_in')}
                  %li
                    %a.linkz_transition{:href => new_user_registration_path} #{t('devise.registrations.new.sign_up')}
            %li.nav-item
              -if I18n.locale == :ru
                =link_to('En', { locale: :en }, class: 'nav-link')
              -else
                =link_to('Ru', { locale: :ru }, class: 'nav-link')
