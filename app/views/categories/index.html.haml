-#%h1 Listing categories
.container
  .row
    - @categories.each do |category|
      .col-md-4
        %h2= category.name
        %p= category.description

        %p
          %a.btn.btn-secondary{:href => category_path(category), :role => "button"} = t('.show')

        - if current_user
          -  if category.user_id == current_user.id
            %p= link_to t('.destroy'), category_path(category), method: :delete, data: { confirm: 'Are you sure?' }
          - else
            %p

        %td= category.follows.count
        %td= (category.follows.count) == 1 ? t('activerecord.attributes.follow.follower') : t('activerecord.attributes.follow.followers')

