- if flash[:notice]
  .alert.alert-success= flash[:notice]
- if flash[:alert]
  .alert.alert-danger= flash[:alert]


= image_tag @image.picture.normal.url
%p
  = @image.likes.count
  = (@image.likes.count) == 1 ? 'Like' : 'Likes'
%p
  - if @like_owner
    = button_to 'Unlike', image_like_path(@image), method: :delete
  - else
    = button_to 'Like', image_likes_path(@image), method: :post


%h2 Image comment
- @image.comments.each do |comment|
  %p
    Commenter:
    = comment.commenter

  %p
    Comment:
    = comment.text

%p

-if current_user
  = form_with( model: [ @image, @image.comments.build ], local: true) do |form|
    %p
      = form.label :commenter
      = form.text_field :commenter

    %p
      = form.label :text
      = form.text_area :text

    %p
      = form.submit

%p
  = link_to 'Back to category', category_path(@category_id)
