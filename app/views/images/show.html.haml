=render 'layouts/menu'
%section#image.container
  .big_title
    - if @activity.second_to_last.action == "img_creation"
      %a.button-back{ :href => category_path(@category_id) }
        = image_tag "left.png", alt: "#{t('image._form.back_to_category')}", size: "64x64"
    - elsif @activity.second_to_last.action == "showing_index_comments"
      %a.button-back{ :href => comments_index_path }
        = image_tag "left.png", alt: "#{t('image._form.back_to_category')}", size: "64x64"
    - else
      %a.button-back{ :href => images_path }
        = image_tag "left.png", alt: "#{t('image._form.back_to_category')}", size: "64x64"
    .big_title_txt.montserrat_font #{@image.title}
    .like_items
      - if @like_owner
        = link_to image_like_path(@image), method: :delete do
          =image_tag "like.png", title: "UnLike", size: "48x48"
      - else
        = link_to image_likes_path(@image), method: :post do
          =image_tag "unlike.png", title: "Like", size: "48x48"
      .text_und_big_title
        = @image.likes.count
  .section_content.image_section
    .image_items
      -#=link_to image_tag(@image.picture.small.url.to_s, :alt => "#{@image.title}" ,:class => "img-polaroid"), @image.picture.normal.url, :rel => "prettyPhoto"
      = image_tag  @image.picture.normal.url, :title => "#{@image.title}"
    .comment_items
      #leave_comment
        .big_title_txt.montserrat_font
          Leave your comment
        .comments_form.text_und_big_title
          -if current_user
            = bootstrap_form_for([ @image, @image.comments.build ], local: true) do |form|
              = form.text_area :text
              = form.submit t('image._form.create_comment')
      #comments
        .big_title_txt.montserrat_font
          Comments list
        .text_und_big_title
          - @comments.each do |comment|
            %p
              = t('activerecord.attributes.comment.commenter')
              = comment.commenter
            %p
              = t('activerecord.attributes.comment.text')
              = comment.text
            %p
              .big_title_txt_separ.background_color
